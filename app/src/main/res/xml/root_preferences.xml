<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Game Options">
        <SwitchPreferenceCompat
            app:key="lose_points"
            app:title="Lose points on pass" />

            <ListPreference
                app:defaultValue="60"
